<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextViewContent" parent="TextViewTitle">
        <item name="android:textStyle">normal</item>

    </style>
    <style name="EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
    <style name="InputLayout">
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
    </style>

</resources>
